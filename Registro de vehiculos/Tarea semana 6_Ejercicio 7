    public class Vehiculo
    {
        public string Placa { get; set; }
        public string Marca { get; set; }
        public string Modelo { get; set; }
        public int A単o { get; set; }
        public decimal Precio { get; set; }

        public Vehiculo(string placa, string marca, string modelo, int a単o, decimal precio)
        {
            this.Placa = placa;
            this.Marca = marca;
            this.Modelo = modelo;
            this.A単o = a単o;
            this.Precio = precio;
        }
