/***********************************************************************
 * Registro de Estudiantes – Redes III (Lista Enlazada)
 * Versión sin “using System;”:
 * • Todas las llamadas a Console → System.Console
 * • Parse → System.Double.Parse
 **********************************************************************/

// Define la clase Estudiante, que representa un nodo en la lista enlazada.
// Cada estudiante tiene propiedades para sus datos personales y una referencia al siguiente estudiante en la lista.
class Estudiante
{
    // Propiedad para almacenar la cédula del estudiante.
    public string Cedula    { get; set; }
    // Propiedad para almacenar el nombre del estudiante.
    public string Nombre    { get; set; }
    // Propiedad para almacenar el apellido del estudiante.
    public string Apellido { get; set; }
    // Propiedad para almacenar el correo electrónico del estudiante.
    public string Correo    { get; set; }
    // Propiedad para almacenar la nota del estudiante (tipo double para permitir decimales).
    public double Nota      { get; set; }
    // Propiedad que referencia al siguiente estudiante en la lista enlazada.
    // Es el enlace que conecta los nodos.
    public Estudiante Siguiente { get; set; }
}
// Define la clase ListaEnlazada, que gestiona la colección de objetos Estudiante.
// Implementa operaciones básicas de una lista enlazada simple.
class ListaEnlazada
{
    // Campo privado que apunta al primer estudiante de la lista.
    // Si la lista está vacía, 'cabeza' será null.
    private Estudiante cabeza;

    // Método para agregar un nuevo estudiante a la lista.
    // Los estudiantes con nota >= 7 se agregan al principio (cabeza) de la lista.
    // Los estudiantes con nota < 7 se agregan al final de la lista.
    public void AgregarEstudiante(Estudiante nuevo)
    {
