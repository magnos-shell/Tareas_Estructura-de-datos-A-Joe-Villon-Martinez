using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

// Programa para manejar los carros del estacionamiento de la facultad
namespace SistemaParqueadero.Modelos
{
    // Esta clase guarda la info de cada carro
    public class Vehiculo
    {
        public string Placa { get; set; }
        public string Marca { get; set; }
        public string Modelo { get; set; }
        public int Año { get; set; }
        public decimal Precio { get; set; }

        public Vehiculo(string placa, string marca, string modelo, int año, decimal precio)
        {
            this.Placa = placa;
            this.Marca = marca;
            this.Modelo = modelo;
            this.Año = año;
            this.Precio = precio;
        }
// Para mostrar los datos del carro cuando se necesite
        public override string ToString()
        {
            return $"Placa: {Placa} | Marca: {Marca} | Modelo: {Modelo} | Año: {Año} | Precio: ${Precio:N2}";
        }
    }

    // Este es un nodo de la lista, cada uno tiene un carro
    public class NodoVehiculo
    {
        public Vehiculo Vehiculo { get; set; }
        public NodoVehiculo Siguiente { get; set; }

        public NodoVehiculo(Vehiculo vehiculo)
        { this.Vehiculo = vehiculo;
            this.Siguiente = null;
        }
    }

